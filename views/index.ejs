<!DOCTYPE html>
<html>

<head>
  <title>Chuck Norris Jokes</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
    integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body class="container">
  <h1 class="jumbotron text-center">Chuck Norris Jokes</h1>
  <div class="row">
    <div class="cos-xs-4">
      <h3>Choose a Category</h3>
      <form action="/" method="get">
        <!-- Categories -->
        <% categories.forEach(function(category){ %>
          <div class="radio">
            <label>
              <input type="radio" name="category" value="<%=category%>" <%=category===categoryChosen && 'checked' %>>
              <%=category%>
            </label>
          </div>
          <%})%>

            <button class="form-control btn btn-success" type="submit">Get Chuck Norris Joke</button>
      </form>
    </div>
  </div>


  <div class="row">
    <div class="col-xs-6">
      <h4>
        <ul>
          <%=categoryChosen%>
        </ul>
        <h5 class="text-primary"><strong>
            <%=joke%>
          </strong></h5>
      </h4>
    </div>
  </div>
</body>

</html>